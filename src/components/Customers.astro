---
const { t } = Astro.props;
---

<section class="py-48">
  <div class="contenedor flex flex-col gap-12 justify-center items-center">
    <h2
      class="text-3xl font-bold text-oscuro [animation-iteration-count:infinite] delay-[200ms] duration-[500ms] taos:translate-y-[200px] taos:opacity-0"
      data-taos-offset="0"
    >
      {t.title.split(" ").map((word, i) =>
        i === 1 ? <span class="text-acento">{word}</span> : word + " "
      )}
    </h2>

    <div
      class="flex flex-wrap items-center gap-3 w-full max-w-[1200px] justify-center [animation-iteration-count:infinite] delay-[200ms] duration-[500ms] taos:translate-y-[200px] taos:opacity-0"
      data-taos-offset="0"
    >
      {[
        { src: "vw.png", alt: "VW" },
        { src: "smotherson.png", alt: "Smotherson" },
        { src: "plasticomnium.png", alt: "Plastic Omnium" },
        { src: "sinterar.png", alt: "Sinterar" },
        { src: "barackmercosul.png", alt: "Barack Mercosul" },
        { src: "grupoantolin.png", alt: "Grupo Antolin" },
        { src: "flexngate.png", alt: "Flex-N-Gate" },
        { src: "sas.png", alt: "SAS" },
        { src: "maro.png", alt: "Maro" },
        { src: "magna.png", alt: "Magna" },
        { src: "f2j.png", alt: "F2J" },
        { src: "trefelt.png", alt: "Trefelt" },
        { src: "ventalum.png", alt: "Ventalum" },
      ].map((logo) => (
        <img
          src={`/customers/${logo.src}`}
          alt={logo.alt}
          class="customer-logo"
          loading="lazy"
        />
      ))}
    </div>
  </div>
</section>

<style>
  .customer-logo {
    width: 150px;
    height: auto;
  }

  @media (width < 1024px) and (width >= 768px) {
    .customer-logo {
      width: 120px;
    }
  }

  @media (width < 768px) {
    .customer-logo {
      width: 100px;
    }
  }
</style>
