---
const { t } = Astro.props;
---

<section
  id="about"
  class="w-full h-full md:h-[550px] lg:h-[750px] relative before:bg-[url(/about-bg.webp)] before:bg-no-repeat before:-z-10 before:h-full before:bg-[bottom_right] md:before:bg-[bottom_right_-60px] before:bg-[clamp(20rem,2.222rem+88.889vw,25rem)_auto] md:before:bg-[400px_auto] lg:before:bg-[auto_700px] before:w-full before:absolute before:left-0 before:top-0 before:content-[''] after:bg-[#383838] after:-z-20 after:h-full after:w-full after:absolute after:left-0 after:top-0 after:content-[''] overflow-hidden"
>
  <div
    class="contenedor about flex flex-col justify-center w-full h-full gap-4 [animation-iteration-count:infinite] taos:translate-x-[-200px] delay-[200ms] duration-[500ms] taos:opacity-0"
    data-taos-offset="300"
  >
    <h2 class="text-acento text-3xl font-bold">{t.title}</h2>

    <p class="text-sm sm:text-base">{t.description1}</p>

    <p class="text-sm sm:text-base">{t.description2}</p>
  </div>
</section>

<style>
  #about {
    clip-path: polygon(0 0, 100% 0, 100% 100%, 0 95%);
  }

  .about {
    padding: 0 clamp(37.5rem, 44.643rem + -11.161vw, 31.25rem) 0 20px;
  }

  @media (width < 1024px) and (width >= 768px) {
    .about {
      padding: 0 360px 0 20px;
    }
  }

  @media (width < 768px) {
    .about {
      padding: 144px 20px clamp(27.5rem, 4.167rem + 116.667vw, 34.063rem) 20px;
    }
  }
</style>
