<script>
    const divisions = document.getElementById("divisions");
    const divisionsAnchor = divisions.querySelectorAll("a");
    const cambiarOfsset = () => {
        if(window.innerWidth < 768) {
            divisions.dataset.taosOffset = "0";
            divisionsAnchor.forEach(a => a.dataset.taosOffset = "0");
        } else {
            divisions.dataset.taosOffset = "200";
            divisionsAnchor.forEach(a => a.dataset.taosOffset = "-150");

        }
    }

    window.addEventListener("resize", cambiarOfsset);
    cambiarOfsset();
</script>