---
const isMatriceria = new URL(Astro.request.url).pathname === "/division-matriceria/";
---

<section class="py-36">
  <div class="contenedor flex flex-col justify-center items-center gap-12">
    <h2 data-i18n='plants.title' class="text-3xl font-bold text-oscuro [animation-iteration-count:infinite] delay-[200ms] duration-[500ms] taos:translate-y-[-200px] taos:opacity-0" data-taos-offset="0">
        Nuestra <span class="text-acento">planta</span>
      </h2>
    <div
      class=`w-full flex flex-col md:flex-row [animation-iteration-count:infinite] delay-[200ms] duration-[500ms] taos:translate-x-[-200px] taos:opacity-0 gap-4`
      data-taos-offset="0"
    >
    
      <div class="flex flex-col gap-4 w-full">
        
            {isMatriceria? (
               <h3 data-i18n='plants.plantMatriceria' class='text-xl font-medium text-oscuro'>PLANTA MATRICERÍA</h3>
