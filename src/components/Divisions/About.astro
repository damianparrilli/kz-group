---
const { t } = Astro.props;
const { aboutId } = Astro.props;

const imageMap = {
  inyeccion: "/inyeccion-image.webp",
  matriceria: "/matriceria-image.webp",
  dispositivos: "/dispositivos-image.webp"
};

const imageSrc = imageMap[aboutId] || "/default-image.webp";
---

<section class="py-24">
    <div class="contenedor flex flex-col md:flex-row gap-8 w-full">
        <img src={imageSrc} alt="Division" class="md:max-w-[50%] object-cover order-2 md:order-1"/>
        <div class="flex flex-col gap-4 justify-center w-full order-1 md:order-2">
            <h2 class="text-acento text-3xl font-bold">{t.title}</h2>
            <p class="text-oscuro text-sm sm:text-base">{t.description1}
                </p>
                <p class="text-oscuro text-sm sm:text-base">{t.description2}</p>
        </div>
    </div>
</section>